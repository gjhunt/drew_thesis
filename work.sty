% SECTION ENVIRONMENT
% Args: name,symbol,number,content
\newenvironment{sect}[4]
{
\begin{shaded}
$\,$\newline {\bf #1 #3}\hrulefill


{\addtolength{\leftskip}{5mm}

#4 

}


\hfill #2\newline\vspace{.5cm} \hrulefill
\end{shaded}
}



%%%%%%%%%%%%%%%%
% Various Math Environments
%%%%%%%%%%%%%%%%
% Args: number, content
\newcommand\ex[2]{\sect{Example}{$\LHD$}{#1}{#2}}

\newcommand\defn[2]{\sect{Definition}{$\rhd$}{#1}{#2}}
\newcommand\prove[2]{\sect{Definition}{$\square$}{#1}{#2}}
\newcommand\thrm[2]{\sect{Theorem}{$\blacksquare$}{#1}{#2}}
\newcommand\coro[2]{\sect{Corollary}{$\blacksquare$}{#1}{#2}}

